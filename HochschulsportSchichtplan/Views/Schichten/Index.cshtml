@model IEnumerable<HochschulsportSchichtplan.Models.Schicht>

@{
    ViewData["Title"] = "Index";
}

<h1>Alle Schichten des Hochschulsports</h1>
@if (User.IsInRole("Admin"))
{
<p>
    <a asp-action="Create">Create New</a>
</p>
}
<form asp-controller="Schichten" asp-action="Index">
    <p>
        Tag: <input type="text" name="searchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ende)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inhaber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stunden)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Tag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ende)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inhaber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stunden)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {<a asp-action="Edit" asp-route-id="@item.Id">Edit | </a>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete | </a>
                }
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>

            </td>
        </tr>
}
    </tbody>
</table>
